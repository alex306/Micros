unsigned char interruption_flag = 0;
unsigned char flag = 0;
unsigned char initialization_ends = 0;
//unsigned char EN = 0;
//unsigned char RS = 0;
unsigned char counter = 0;
unsigned char power_on = 1;
/*unsigned char function_set_2 = 2;
unsigned char function_set_3 = 3;
unsigned char function_set_4 = 4;
unsigned char function_set_5 = 5;
unsigned char function_set_6 = 6;
unsigned char function_set_7 = 7;
unsigned char function_set_8 = 8;*/
unsigned char state = 1;
//unsigned char initialization_ends = 0;

interrupt 7 void RTI_TPM(void){
	(void)TPMSC;
	TPMSC_TOF = 0; //Timer Overflow Flag
	interruption_flag = 1;
	//flag = 1;
	//next_state = state;
}

void delay(unsigned int tiempo)//genera 1 ms (probar)
{
	//delay formula is (PS*(MTIMMOD + 1)) / FrecuencyCLK
	unsigned int i;
	MTIMSC = 0;
	for(i = 0; i < tiempo; i++){
		do{
			__RESET_WATCHDOG();
		}while(MTIMSC_TOF == 0);
		MTIMSC_TRST = 1;
	}
}

void lcd_inicialization(void)
{
	if(state == 1) //Power on
	{
		MTIMCLK = 0b00000100; //PS = 16
		MTIMMOD = 249; // 1ms
		delay(100);
		PTBD = 0x30;
		EN = 1;
		RS = 0;
		state = 2;
	}
	else if(state == 2) //function_set_2
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 3;
	}
	else if(state == 3) //function_set_3
	{
		MTIMCLK = 0b00000100; //PS = 16
		MTIMMOD = 249; // 1ms
		delay(6);
		PTBD = 0x30;
		EN = 1;
		RS = 0;
		state = 4;
	}
	else if(state == 4) //function_set_4
	{
		MTIMCLK = 0b00000010; //PS = 4
		MTIMMOD = 1; // 1us
		delay(32);
		EN = 0;
		RS = 0;
		state = 5;
	}
	else if(state == 5) //function_set_5
	{
		MTIMCLK = 0b00000010; //PS = 4
		MTIMMOD = 1; // 1us
		delay(100);
		PTBD = 0x30;
		EN = 1;
		RS = 0;
		state = 6;
	}
	else if(state == 6) //function_set_6
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 7;
	}
	else if(state == 7) //function_set_7
	{
		delay(100);
		PTBD = 0x20;
		EN = 1;
		RS = 0;
		state = 8;
	}
	else if(state == 8) //function_set_8
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 9;
	}
	else if(state == 9) //function_set_8
	{
		delay(100);
		PTBD = 0x20;
		EN = 1;
		RS = 0;
		delay(50);
		PTBD = 0x00; //NF**
		state = 10;
	}
	else if(state == 10) //function_set_8
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 11;
	}
	else if(state == 11) //function_set_8
	{
		delay(55);
		PTBD = 0x00;
		EN = 1;
		RS = 0;
		delay(50);
		PTBD = 0x80;
		state = 12;
	}
	else if(state == 12) //function_set_8
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 13;
	}
	else if(state == 13) //function_set_8
	{
		delay(55);
		PTBD = 0x00;
		EN = 1;
		RS = 0;
		delay(55);
		PTBD = 0x01;
		state = 14;
	}
	else if(state == 14) //function_set_8
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 15;
	}
	else if(state == 15) //function_set_8
	{
		MTIMCLK = 0b00000100; //PS = 16
		MTIMMOD = 249; // 1ms
		delay(5);
		PTBD = 0x00;
		EN = 1;
		RS = 0;
		delay(10);
		PTBD = 0x60; //0 1 I/D S
		state = 16;
	}
	else if(state == 16) //function_set_8
	{
		delay(32);
		EN = 0;
		RS = 0;
		state = 17;
	}
	else if(state == 17) //function_set_8
	{
		MTIMCLK = 0b00000010; //PS = 4
		MTIMMOD = 1; // 1us
		delay(55);
		EN = 0;
		RS = 0;
		state = 18;
	}
	else if(state == 18){
		delay(32);
		EN = 0;
		RS = 0;
		state = 19;
	}
	else if(state == 19) //function_set_8
	{
		PTBD = 0x00;
		EN = 1;
		RS = 0;
		delay(50);
		PTBD = 0xF0;
		state = 20;
	}
	else if(state == 20){
		delay(55);
		EN = 0;
		RS = 0;
		initialization_ends = 1;
	}
}

void main(void) {
	/*          Configuracion TIMER          */    
	// (PS * TPMMOD) / FrecuencyCLK
	// Bus clock = 4 Mhz, Preescaler = 4   
	TPMSC = 0b01001010; // 1 Âµs
	TPMMOD = 1000; // 1 ms
	
	PTBDD=0xFF;
	PTADD = 0xFF;
	EnableInterrupts;
	for(;;) {
		if(initialization_ends == 0){
			if(interruption_flag == 1){
				interruption_flag = 0;
				lcd_inicialization();
			}
		}
		
		/*if(led == 1){
			PTBD_PTBD7 = 1;
			delay(1000);
			led = 0;
		}
		else{
			PTBD_PTBD7 = 0;
			delay(1000);
			led = 1;
		}*/
		/*switch(state){

		case LED_ON:
			//flag_1s = 0;
			//PTBD_PTBD7 = 1;
			delay(1000);
			state = LED_OFF;
			break;

		case LED_OFF:
			//flag_1s = 0;
			PTBD_PTBD7 = 0;
			delay(1000);
			state = LED_ON;
			break;
		}*/
		__RESET_WATCHDOG();	/* feeds the dog */
	} 
}
